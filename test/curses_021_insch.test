;;;; -*- Mode: scheme; -*-
;;;; curses_021_insch.test --- test suite for curse's insert character
;;;; functions

(use-modules (test lib)
             (test lib2)
             (gucu curses)
             (srfi srfi-1))

(define test (curses-test-start))

(define win (initscr))

(define (mvinch y x)
  (inch win #:y y #:x x))

;; Should be able to insert characters
(with-test-prefix
 "insch"

 (pass-if "insch"
          (begin
            (clear win)
            (refresh win)
            (addstr win "xxx" #:y 0 #:x 0)
            (move win 0 0)
            (insch win (normal #\z))
            (refresh win)
            (let ((x1 (mvinch 0 0))
                  (x2 (mvinch 0 1)))
              (and
               (xchar-equal? x1 (normal #\z))
               (xchar-equal? x2 (normal #\x))))))

 (pass-if "insch #:y #:x"
          (begin
            (clear win)
            (refresh win)
            (addstr win "xxx" #:y 0 #:x 0)
            (insch win (normal #\z) #:y 0 #:x 0)
            (let ((x1 (mvinch 0 0))
                  (x2 (mvinch 0 1)))
              (and
               (xchar-equal? x1 (normal #\z))
               (xchar-equal? x2 (normal #\x)))))))
(endwin)

(curses-test-end test "curses_021_insch.out")
