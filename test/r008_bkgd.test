;;;; -*- Mode: scheme; -*-
;;;; r008_bkgd.test --- test suite for curses's background functions

(use-modules (test lib)
	     (test lib2)
	     (srfi srfi-1)
	     (gucu curses))


(define test (curses-test-start))

(define win (initscr))

(define period (normal #\.))
(define plus (normal #\+))
(define space (normal #\sp))


(clear win)
(standend! win)

(with-test-prefix 
 "bkgd"
 
 (pass-if "bkgd"
	  (begin
	    (addstr win "This is a string" #:y 0 #:x 0)
	    (bkgd win (bold #\.))
	    (addstr win "This is a new string" #:y 1 #:x 0)
	    (refresh win)
	    (let ((x1 (inch win #:y 0 #:x 4)) ;Loc of space between "This" and "is"
		  (x2 (inch win #:y 1 #:x 4)))
	      (begin
		(bkgd win (normal #\space)) ; clear bkgd
		(clear win)
		(refresh win)
		(and
		 (equal? (bold #\.) x1)
		 (equal? (bold #\.) x2))))))
 
 (pass-if "bkgdset"
	  (begin
	    (standend! win)
	    (addstr win "This is a string" #:y 0 #:x 0)
            (bkgdset win (color 1 (dim #\+)))
	    (addstr win "This is another string" #:y 1 #:x 0)
	    (refresh win)
	    (let ((x1 (inch win #:y 0 #:x 4))
		  (x2 (inch win #:y 1 #:x 4)))
	      (begin
		(bkgd win (normal #\space)) ; clear bkgd
		(clear win)
		(refresh win)
		(and
		 (equal? (normal #\space) x1)
		 (equal? (color 1 (dim #\+))) x2)))))))

(endwin)

(curses-test-end test "r008_bkgd.out")
		  
