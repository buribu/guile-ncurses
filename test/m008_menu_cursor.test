;;;; -*- Mode: scheme; -*-

;;;; m008_menu_cursor.test --- pos-menu-cursor

(use-modules (test lib)
	     (test lib2)
	     (srfi srfi-1)
	     (gucu curses)
	     (gucu menu))

(define test (curses-test-start))

(define win (initscr))

;; Should be able to make a menu
(with-test-prefix "menu-cursor"

		  (pass-if "(default)"
			   (let* ((item1 (new-item "item1" "description1"))
				  (menu (new-menu (list item1))))
			     (post-menu menu)
			     (move win 10 0)
			     (addstr win "blammo!")
			     (pos-menu-cursor menu)
			     (refresh win)
			     ;; (sleep 3)
			     (let* ((yx (getyx win))
				    (y (first yx))
				    (x (second yx)))
			       (unpost-menu menu)
			       (refresh win)
			       (equal? y 0)))))
(endwin)

(curses-test-end test "m008_menu_cursor.out")
